{% extends 'admin/admin_base.html.twig' %}

{% block title %}Modifier un producteur{% endblock %}

{% block body %}
    <div class="card mx-auto medium_form">
        <div class="card-body">
            <h5 class="card-title">Modifier le producteur {{ productor.name }}</h5>
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.appellations) }}
            {{ form_row(form.description) }}

            <div class="text-center">
                <a class="btn btn-light" href="{{ path('admin_shop_list_productor') }}">
                    Annuler
                </a>
                <button class="btn btn-success" type="submit">
                    Modifier
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
