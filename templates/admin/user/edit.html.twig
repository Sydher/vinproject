{% extends 'admin/admin_base.html.twig' %}

{% block title %}Modifier utilisateur{% endblock %}

{% block body %}
    <div class="card mx-auto login_form">
        <div class="card-body">
            <h5 class="card-title">Modification de {{ user.username }}</h5>
            {{ form_start(editForm) }}
            {{ form_row(editForm.email) }}
            {{ form_row(editForm.username) }}
            {{ form_row(editForm.plainPassword) }}
            {{ form_row(editForm.roles) }}

            <a class="btn btn-light" href="{{ path('admin_user_list') }}">
                Annuler
            </a>
            <button class="btn btn-success" type="submit">
                Modifier
            </button>
            {{ form_end(editForm) }}
        </div>
    </div>
{% endblock %}
