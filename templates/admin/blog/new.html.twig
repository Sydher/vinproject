{% extends 'admin/admin_base.html.twig' %}

{% block title %}Créer un article{% endblock %}

{% block body %}
    <div class="card mx-auto medium_form mt-3 mb-3">
        <div class="card-body">
            <h5 class="card-title">Créer un article</h5>
            {{ include('admin/blog/_form.html.twig',
                { form: form, indexRouteName: indexRouteName, ok_label: "Créer" }) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init()
        })
    </script>
{% endblock %}
