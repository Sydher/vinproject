{% extends 'admin/admin_base.html.twig' %}

{% block title %}Créer un article{% endblock %}

{% block body %}
    <div class="card mx-auto medium_form">
        <div class="card-body">
            <h5 class="card-title">Créer un article</h5>
            {{ form_start(createForm) }}
            {{ form_row(createForm.title) }}
            {{ form_row(createForm.description) }}
            {{ form_row(createForm.imageFile) }}
            {{ form_row(createForm.content) }}
            <small id="emailHelp" class="form-text text-muted">
                Par défaut l'article sera invisible (non affiché dans le blog).
                Il faut l'activer via la liste des articles.
            </small>

            <div class="text-center">
                <a class="btn btn-light" href="{{ path('admin_blog_list') }}">
                    Annuler
                </a>
                <button class="btn btn-success" type="submit">
                    Créer
                </button>
            </div>
            {{ form_end(createForm) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init()
        })
    </script>
{% endblock %}
