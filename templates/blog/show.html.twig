{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">
                <img src="{{ asset('build/images/bottle.svg') }}" alt="bouteille" class="h1_bottle">
                {{ post.title }}
            </h1>
            <div class="mb-1 text-muted">
                {{ post.createdAt | format_datetime('long') }}
                -
                {{ post.author.username }}
            </div>
            <hr>

            {% if post.imageName %}
                <div class="text-center mb-4">
                    <img src="{{ vich_uploader_asset(post, 'imageFile') }}"
                         class="img-fluid"
                         alt="image-{{ post.slug }}">
                </div>
            {% endif %}

            <div class="text-justify">
                {{ post.content }}
            </div>

            <div class="text-right mt-4">
                <a href="{{ path('blog_list') }}" class="btn btn-link">Lire d'autres articles</a>
            </div>
        </div>
    </div>
{% endblock %}
