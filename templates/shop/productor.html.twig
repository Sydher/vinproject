{% extends 'base.html.twig' %}

{% block title %}{{ productor.name }}{% endblock %}
{% block description %}
    <meta name="description" content="Tous les vins du producteur {{ productor.name }}">
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">
                <img src="{{ asset('build/images/bottle.svg') }}"
                     alt="bouteille" class="h1_bottle">
                {{ productor.name }}
            </h1>
            <hr>
            <div>
                <ul>
                    {% for wine in productor.wines %}
                        <li class="wine_list_item">
                            {{ include('shop/_whine_list_item.html.twig',
                                {wine: wine}) }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
