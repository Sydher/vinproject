{% extends 'base.html.twig' %}

{% block title %}{{ wine.name }}{% endblock %}
{% block description %}
    <meta name="description" content="Page de vente de {{ wine.name }}">
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">
                <img src="{{ asset('build/images/bottle.svg') }}"
                     alt="bouteille" class="h1_bottle">
                {{ wine.name }}
            </h1>
            <hr>
            <div>
                <div class="row">
                    <div class="col">
                        <table class="table">
                            <tr>
                                <th scope="row">Appellation</th>
                                <td>{{ wine.appellation.name }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Producteur</th>
                                <td>{{ wine.productor.name }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Couleur</th>
                                <td>
                                    {{ wine.color }}
                                    <i class="fas fa-wine-bottle wine_color_{{ wine.color }}">
                                    </i>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Millésime</th>
                                <td>{{ wine.year }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Cuvée</th>
                                <td>TODO</td>
                            </tr>
                            <tr>
                                <th scope="row">Format</th>
                                <td>{{ wine.format }}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col">image</div>
                </div>
                {{ wine.description }}
            </div>
        </div>
    </div>
{% endblock %}
