<div class="card">
    <div class="card-body">
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.appellation) }}
        {{ form_row(form.productor) }}

        <h6>Prix</h6>
        <div class="row">
            <div class="col">
                {{ form_row(form.min) }}
            </div>
            <div class="col">
                {{ form_row(form.max) }}
            </div>
        </div>
        <div id="price_slider" data-min="{{ min }}" data-max="{{ max }}"></div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
